<h5>Updated On: <%= @car.friendly_updated_at %></h5>

<h2>Manufacture: <%= @car.manufacture %></h2>

<h2>Color: <%= @car.color %></h2>

<h2>Year: <%= @car.year %></h2>

<h2>Price: <%= @car.price %></h2>

<h2>Image: <%= @car.image %></h2>

<h2>Name: <%= @car.name %></h2>

<a href="/cars">Home</a> <br>

<a class="btn btn-info" href="/cars/<%= 
@car.id %>/edit"> Edit Car</a> <br>

<%= form_tag "/cars/#{@car.id}", method: :delete do %> 
<input class="btn btn-danger"
type="submit" value="remove car">
<% end %>

<%= form_tag "/orders", method: :post do %> 
<%= label_tag :quantity %> 
<%= text_field_tag :quantity %> 
<%= label_tag :product_id %> 
<%= text_field_tag :product_id %> 
<input class="btn btn-danger"
type="submit" value="buy now">



<% end %>




